<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Gold_NewsletterPopup::customMenu" title="Custom Menu">
                        <resource id="Gold_NewsletterPopup::sampleOne" title="One" sortOrder="10" />
                        <resource id="Gold_NewsletterPopup::sampleTwo" title="Two" sortOrder="20" />
                    </resource>
                </resource>
                <!-- You can imagine an other node here:
                <resource id="Magento_Backend::content">
                    <resource id="Gold_NewsletterPopup::things" title="Things" sortOrder="70"/>
                </resource>
                -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Gold_NewsletterPopup::config" title="AdminSampleConfig" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>