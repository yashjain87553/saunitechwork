<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  layout="1column"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Magenest_GiftRegistry/css/owl.carousel.css"/>
        <css src="Magenest_GiftRegistry/css/owl.transitions.css"/>
        <css src="Magenest_GiftRegistry/css/giftregistry.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceContainer name="content">
            <block class="Magenest\GiftRegistry\Block\Guest\View" name="giftregistry.guest.view" template="Magenest_GiftRegistry::guest/view.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>